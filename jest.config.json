{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "roots": ["<rootDir>"],
  "testMatch": ["**/__tests__/**/*.test.ts", "**/__tests__/**/*.test.tsx"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
  "collectCoverageFrom": ["lib/**/*.{ts,tsx}", "!lib/**/*.d.ts"],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  }
}
